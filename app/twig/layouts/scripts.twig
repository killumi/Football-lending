{# jQuery #}
<script src="js/jquery-3.3.1.min.js"></script>
{# end #}

{# owl slider js #}
<script src="js/owl.carousel.min.js"></script>
{# end #}

<script>
    {# owl main slider #}
    $('.js-girls-slider').owlCarousel({
        loop:true,
        margin:30,
        center: true,
        nav:false,
        dots:false,
        responsive:{
            0:{
                items:1
            },
            500:{
                items:2
            },
            840:{
                items:3
            },
            1100:{
                items:4
            },
            1600:{
                items: 5
            },

            1920:{
                items: 6
            }

        }
    });

    // open/close popup

    $('.js-open-popup').on('click', function () {
       var popup =  $(this).attr('data-popup-target');
       $(popup).removeClass('fw-hidden');
    });

    $('.js-close-popup').on('click', function () {
       $('.js-popup').addClass('fw-hidden');
    });


</script>